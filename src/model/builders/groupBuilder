import { DataTypes, Sequelize } from "sequelize";

/**
 * Ingredient Builder
 * @param {Sequelize} sequelize
 * @returns 
 */
export default function groupBuilder(sequelize) {
    const Group = sequelize.define(
        // Nom du Model
        'group',
        // Attributs
        {
            name: {
                type: DataTypes.STRING(50),
                allowNull: false
            }
        },
        // Options
        {
            tableName: 'group',
            timestamps: false
        }
    );

    return Group;
};